<Window x:Class="SwordDamageWPF_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamageWPF_App"
        mc:Ignorable="d"
        Title="SwordDamage" Height="175" Width="300" Visibility="Visible" AllowsTransparency="True" WindowStyle="None" Background="#FF1C368E" Foreground="Black" OpacityMask="Black">
    <Grid Height="175">
        <CheckBox x:Name="Flaming" Content="Flaming" HorizontalAlignment="Left" Margin="45,40,0,0" VerticalAlignment="Top" Checked="Flaming_Checked" Unchecked="Flaming_Unchecked"/>
        <CheckBox x:Name="Magic" Content="Magic" HorizontalAlignment="Left" Margin="200,40,0,0" VerticalAlignment="Top" Checked="Magic_Checked" Unchecked="Magic_Unchecked"/>
        <Button x:Name="Button" Content="Button" HorizontalAlignment="Left" Margin="115,70,0,85.2" VerticalAlignment="Center" Width="75" HorizontalContentAlignment="Center" Height="20" Click="Button_Click"/>
        <TextBox x:Name="Damage" Margin="90,112,90,40" TextWrapping="Wrap" Text="Damage" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
